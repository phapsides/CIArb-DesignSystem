{% from "image/macro.njk" import bcImage %}

<figure
	data-module="bc-figure"
	class="bc-figure {%- if params.classes %} {{ params.classes }}{% endif %}"
	{%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}
>
	{{ bcImage(params.image) }}
	{%- if params.figcaption %}
		<figcaption>
			{{ params.figcaption }}
		</figcaption>
	{% endif %}
</figure>
