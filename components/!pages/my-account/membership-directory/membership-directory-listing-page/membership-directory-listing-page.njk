{% block sidebar %}
    {% from "form/macro.njk" import bcForm %}
    {% from "checkbox/macro.njk" import bcCheckbox %}
    {% from "select/macro.njk" import bcSelect %}
    {% from "input/macro.njk" import bcInput %}
    {% from "button/macro.njk" import bcButton %}

    <div class="search-form-mobile">
        {{ bcHeading({
            hierarchy: 2,
            text: 'Find a member'
        }) }}
        {% call bcForm({
            classes: 'fs-!-margin-bottom-6 ip-membership-directory__search-form',
            action: '',
            method: '',
            disableUnloadPrompt: true
        }) %}
        {{ bcInput({
            name: 'member_name',
            required: true,
            label: { 
                text: 'Type a member name (if known)' 
            }
        }) }}
        {{ bcButton({
            classes:'bc-form-row',
            appearance: 'primary',
            type: 'submit',
            text: 'Search by name'
        }) }}
        {% endcall %}
    </div>

    <div
    data-module="bc-filters"
    id="filters"
    class="bc-filters">
    {% call bcForm({
        action: '',
        method: '',
        disableUnloadPrompt: true
    }) %}
        {{ bcHeading({
			classes: 'bc-heading bc-heading--subtitle',
			hierarchy: 3,
			html: 'Filters <i class="bc-icon fa-regular fa-chevron-down"></i>',
            attributes: {
                id: 'filters-title'
            }
		}) }}
        <div class="bc-filters__body">
            {{ bcCheckbox({
                name: 'ExampleCheckboxGroup',
                legend: {
                    text: 'Disciplines'
                },
                options: [
                    {
                        text: 'All areas',
                        value: '1'
                    },
                    {
                        text: 'Adjudication',
                        value: '2'
                    },
                    {
                        text: 'Arbitration',
                        value: '3'
                    },
                    {
                        text: 'Mediation',
                        value: '4'
                    },
                    {
                        text: 'Dispute Resolution',
                        value: '5'
                    }
                ]
            }) }}
            {{ bcSelect({
                name: "ExampleSelect",
                required: true,
                label: { 
                    text: "Country" 
                },
                options: [
                    { value: "", text: "All countries" },
                    { value: "", text: "Lorem ipsum" },
                    { value: "",  text: "Lorem ipsum" }
                ]
            }) }}
            {{ bcSelect({
                name: "ExampleSelect",
                required: true,
                label: { 
                    text: "Branch" 
                },
                options: [
                    { value: "", text: "All branches" },
                    { value: "", text: "Lorem ipsum" },
                    { value: "",  text: "Lorem ipsum" }
                ]
            }) }}
            <div class="bc-filters__actions">
                {{ bcButton({
                    classes:'bc-form-row',
                    appearance: 'primary',
                    type: 'submit',
                    text: 'Apply filters',
                    attributes: { 
                        'name': 'testName', 
                        'value': 'testValue' 
                    }
                }) }}
                {{ bcButton({
                    classes:'bc-form-row',
                    appearance: 'link',
                    text: 'Clear filters'
                }) }}
            </div>
        </div>
    {% endcall %}

{% endblock %}