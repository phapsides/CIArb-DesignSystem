{% extends '@t-centered' %}

{% block breadcrumbs %}
    {{ bcBreadcrumbs({
		items: [
			{ text: 'Home', href: '/' },
			{ text: 'Membership', href: '#' },
			{ text: 'Student membership', href: '#' },
			{ text: 'Student membership application', href: '#', current: true }
		]
	}) }}
{% endblock %}

{% block beforeTemplate %}
    {% from 'icon/macro.njk' import bcIcon %}
    <div class="bc-step-indicator-container">
        <div data-module="bc-step-indicator" class="bc-step-indicator">
            <div class="bc-step-indicator__step complete">
                <div class="bc-step-indicator__step-number">
                    {{ bcIcon({
                        variant: 'check'
                    }) }}
                </div>
                <div class="bc-step-indicator__body">
                    <p>
                        <strong>Step 1</strong>
                    </p>
                    <p>Before you Start</p>
                </div>
            </div>
            <div class="bc-step-indicator__line complete"></div>
            <div class="bc-step-indicator__step complete">
                <div class="bc-step-indicator__step-number">
                    {{ bcIcon({
                        variant: 'check'
                    }) }}
                </div>
                <div class="bc-step-indicator__body">
                    <p>
                        <strong>Step 2</strong>
                    </p>
                    <p>Personal details</p>
                </div>
            </div>
            <div class="bc-step-indicator__line complete"></div>
            <div class="bc-step-indicator__step" aria-current="step">
                <div class="bc-step-indicator__step-number">3</div>
                <div class="bc-step-indicator__body">
                    <p>
                        <strong>Step 3</strong>
                    </p>
                    <p>Qualifications</p>
                </div>
            </div>
            <div class="bc-step-indicator__line"></div>
            <div class="bc-step-indicator__step">
                <div class="bc-step-indicator__step-number">4</div>
                <div class="bc-step-indicator__body">
                    <p>
                        <strong>Step 4</strong>
                    </p>
                    <p>Declaration</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="ip-student-membership-application ip-student-membership-application__step-3">
        {% from "heading/macro.njk" import bcHeading %}
        {% from "form/macro.njk" import bcForm %}
        {% from "input/macro.njk" import bcInput %}
        {% from "button/macro.njk" import bcButton %}
        {% from "grid/macro.njk" import bcGrid %}
        {% from "date-input/macro.njk" import bcDateInput %}

        {{ bcHeading({
			hierarchy: 1,
			text: 'Student member application'
		}) }}
        {{ bcHeading({
			hierarchy: 2,
			text: 'Qualifications'
		}) }}

        {% call bcForm({
			action: '',
			method: '',
			disableUnloadPrompt: true
		}) %}

            {{ bcInput({
                name: 'institution_name',
                required: true,
                label: { 
                    text: 'Name of the institution' 
                }
            }) }}
            {{ bcInput({
                name: 'course_name',
                required: true,
                label: { 
                    text: 'Course name' 
                }
            }) }}

            {% call bcGrid({
				size: '1/2'
			}) %}
               {{ bcDateInput({
                    idPrefix: 'start_date',
                    day: {
                        name: 'Day',
                        autocomplete: 'bday-day'
                    },
                    month: {
                        name: 'Month',
                        autocomplete: 'bday-month'
                    },
                    year: {
                        name: 'Year',
                        autocomplete: 'bday-year'
                    },
                    legend: {
                        text: 'Start date'
                    },
                    hint: { 
                        text: 'e.g. 31/01/1978' 
                    }
                }) }}
                 {{ bcDateInput({
                    idPrefix: 'end_date',
                    day: {
                        name: 'Day',
                        autocomplete: 'bday-day'
                    },
                    month: {
                        name: 'Month',
                        autocomplete: 'bday-month'
                    },
                    year: {
                        name: 'Year',
                        autocomplete: 'bday-year'
                    },
                    legend: {
                        text: 'End date'
                    },
                    hint: { 
                        text: 'e.g. 31/01/1978' 
                    }
                }) }}
            {% endcall %}

            {{ bcInput({
                name: 'qualification_proof',
                required: true,
                label: { 
                    text: 'Upload proof of qualifications' 
                },
                attributes: {
                    type: 'file'
                }
            }) }}

            <div class="bc-button-group">
                {{ bcButton({
                    appearance: 'primary',
                    type: 'submit',
                    text: 'Continue'
                }) }}
                {{ bcButton({
                    appearance: 'secondary',
                    type: 'button',
                    text: 'Previous'
                }) }}
                {{ bcButton({
                    appearance: 'link',
                    type: 'button',
                    text: 'Cancel'
                }) }}
            </div>

        {% endcall %}

    </div>
{% endblock %}