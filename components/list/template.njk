{% set element = params.element if params.element else ('ol' if params.style == 'numbered' else 'ul') %}

<{{ element }}
    data-module="bc-list"
    {%- if params.style %} data-style="{{ params.style }}"{% endif %}
    {%- if params.spaced %} data-spaced{% endif %}
    class="bc-list {%- if params.classes %} {{ params.classes }}{% endif %}"
    {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}>
    {{ caller() if caller }}
</{{ element }}>
