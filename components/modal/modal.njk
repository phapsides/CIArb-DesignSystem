{% from "modal/macro.njk" import bcModal %}
{% from "prose/macro.njk" import bcProse %}
{% from "button/macro.njk" import bcButton %}

{{ bcButton({
    appearance: 'primary',
    text: 'Open modal 1',
    type: 'button',
    attributes: {
        'data-modal-open': 'modal-1'
    }
}) }}

{{ bcButton({
    appearance: 'primary',
    text: 'Open modal 2',
    type: 'button',
    attributes: {
        'data-modal-open': 'modal-2'
    }
}) }}

