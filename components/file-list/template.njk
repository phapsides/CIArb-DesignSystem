{% from "icon/macro.njk" import bcIcon %}
{% from "heading/macro.njk" import bcHeading %}

<dl 
	data-module="bc-file-list"
    class="bc-file-list {%- if params.classes %} {{ params.classes }}{% endif %}"
    {%- for attribute, value in params.attributes %} {{ attribute }}="{{ value }}"{% endfor %}
>
	{%- for item in params.items %}  
		<div class="bc-file-list__item">
			<div class="bc-file-list__filename">
				{{ bcHeading(item.heading) }}
				{%- if item.description %}
					<p class="bc-file-list__description">{{ item.description }}</p>
				{%- endif %}
			</div>
			<a class="bc-file-list__action" href="#" title="Download {{ item.name }}">
				{{ bcIcon({
					variant: "arrow-down-to-line"
				}) }}
			</a>
		</div>
	{%- endfor %}
</dl>
